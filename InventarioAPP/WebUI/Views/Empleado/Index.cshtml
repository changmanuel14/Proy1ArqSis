@model IEnumerable<Models.Empleado>

@{
    ViewBag.Title = "Index";
}
<section class="content-header">
    <h2>Empleado</h2>
</section>

<section class="content">

    <div class="box">
        <div class="box-body">
            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayName("Nombres")
                    </th>
                    <th>
                        @Html.DisplayName("Apellidos")
                    </th>
                    <th>
                        @Html.DisplayName("Dirección")
                    </th>
                    <th>
                        @Html.DisplayName("Teléfono")
                    </th>
                    <th>
                        @Html.DisplayName("CUI")
                    </th>
                    <th>
                        @Html.DisplayName("Fecha de Nacimiento")
                    </th>
                    <th>
                        @Html.DisplayName("Estado")
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.nombres_empleado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.apellidos_empleado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.direccion_empleado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.telefono_empleado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.cui_empleado)
                        </td>
                        <td>
                            @Convert.ToDateTime(item.fecha_nacimiento).ToString("dd/MM/yyyy")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.estado_empleado)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.EmpleadoId }) |
                            @Html.ActionLink("Details", "Details", new { name = item.nombres_empleado }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.EmpleadoId })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>

</section>
