@model Models.Empleado

@{
    ViewBag.Title = "Delete";
}
<section class="content-header">
    <h2>Eliminar</h2>
    <h3>¿Está seguro de eliminar el registro?</h3>
</section>

<section class="content">

    <div class="box">
        <div class="box-body">
            <div>
                <h4>Empleado</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayName("Nombres")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.nombres_empleado)
                    </dd>

                    <dt>
                        @Html.DisplayName("Apellidos")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.apellidos_empleado)
                    </dd>

                    <dt>
                        @Html.DisplayName("Dirección")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.direccion_empleado)
                    </dd>

                    <dt>
                        @Html.DisplayName("Teléfono")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.telefono_empleado)
                    </dd>

                    <dt>
                        @Html.DisplayName("CUI")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.cui_empleado)
                    </dd>

                    <dt>
                        @Html.DisplayName("Fecha de Nacimiento")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.fecha_nacimiento)
                    </dd>

                    <dt>
                        @Html.DisplayName("Estado")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.estado_empleado)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-default" /> |
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                }
            </div>
        </div>
    </div>

</section>
