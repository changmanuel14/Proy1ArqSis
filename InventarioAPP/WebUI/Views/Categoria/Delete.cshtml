@model Models.Categoria

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Categoría</h4>
    <hr />
    <dl class="dl-horizontal">
        @{ var creacion = Convert.ToDateTime(Model.fecha_creacion).ToString("dd/MM/yyyy"); }
        <dt>
            @Html.DisplayName("Nombre")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.nombre_categoria)
        </dd>

        <dt>
            @Html.DisplayName("Fecha de Creación")
        </dt>
        <dd>
            @Html.DisplayFor(model => creacion)
        </dd>

        <dt>
            @Html.DisplayName("Estado")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.estado_categoria)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
